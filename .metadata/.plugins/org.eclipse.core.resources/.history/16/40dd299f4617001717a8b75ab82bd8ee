	}
	
	public void broadcastUpdate(World world, Block block){
		
	}
	
	//@WebSocket
	static class WSWebSocketHandler {
		
		//@OnWebSocketConnect
		public void onConnect(Session user) throws IOException {
			
		}
		
	}
	
}